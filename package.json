  "bugs": {
    "url": "https://github.com/feiju12138/universal-api-proxy/issues"
  },
  "homepage": "https://github.com/feiju12138/universal-api-proxy#readme",
  "dependencies": {
    "cors": "^2.8.6",
    "express": "5.1.0",
    "hono": "^4.6.20"
  },
  "devDependencies": {
